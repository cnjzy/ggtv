<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#cccccc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white"
        android:orientation="horizontal"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:id="@+id/image_layout_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/text_white"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_image_iv"
                android:layout_width="fill_parent"
                android:layout_height="104dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="5dp"
                android:background="@color/bg_gray" />
            
            <ImageView
            	android:id="@+id/item_vip_iv"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="@drawable/f20_vip"
            	android:layout_alignParentRight="true"
            />

            <TextView
                android:id="@+id/item_tag_1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_image_iv"
                android:layout_marginTop="5dp"
                android:background="@drawable/tag_round_pink_bgl"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:text="标签1"
                android:textColor="@color/pink"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_tag_2_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image_iv"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/item_tag_1_tv"
                android:background="@drawable/tag_round_naturals_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:text="标签2"
                android:textColor="@color/naturals"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_name_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image_iv"
                android:layout_toLeftOf="@+id/item_tag_2_tv"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="圣诞节两款手机的理发师"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
        
        <RelativeLayout
            android:id="@+id/image_layout_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/text_white"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/item_image_right_iv"
                android:layout_width="fill_parent"
                android:layout_height="104dp"
                android:layout_marginBottom="5dp"
                android:scaleType="fitXY"
                android:background="@color/bg_gray" />

            <ImageView
            	android:id="@+id/item_vip_right_iv"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:background="@drawable/f20_vip"
            	android:layout_alignParentRight="true"
            />
            
            <TextView
                android:id="@+id/item_tag_1_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/item_image_right_iv"
                android:layout_marginTop="5dp"
                android:background="@drawable/tag_round_pink_bgl"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:text="标签1"
                android:textColor="@color/pink"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_tag_2_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image_right_iv"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/item_tag_1_right_tv"
                android:background="@drawable/tag_round_naturals_bg"
                android:paddingBottom="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingTop="1dp"
                android:text="标签2"
                android:textColor="@color/naturals"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/item_name_right_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_image_right_iv"
                android:layout_toLeftOf="@+id/item_tag_2_right_tv"
                android:gravity="center|left"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:text="圣诞节两款手机的理发师"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>