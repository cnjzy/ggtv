<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/loading_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/global_padding_mid"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="@dimen/global_padding_mid" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/loading_progress_bar"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.example.ddddd.widget.view.CustomTextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/global_padding_mid"
                android:layout_marginTop="@dimen/global_padding_mid"
                android:lineSpacingExtra="3dp"
                android:text="@string/loading_titile"
                android:textColor="@color/text_gray" />
        </LinearLayout>

        <com.example.ddddd.widget.view.CustomTextView
            android:id="@+id/loading_del_textview"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loading_close_button_selector"
            android:gravity="center"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>